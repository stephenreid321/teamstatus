<div class="modal-header">
  <a class="close" data-dismiss="modal" >&times;</a>
  <h3>
    Sign in
  </h3>
</div>

<% form_tag '/accounts/sign_in', :class => 'form-horizontal', :remote => true do %>

  <div class="modal-body">

    <% if flash[:error] %>
      <div class="alert alert-error">
        <%=flash[:error].html_safe %>
      </div>      
    <% end %>
    
    <% if flash[:success] %>
      <div class="alert alert-success">
        <%=flash[:success].html_safe %>
      </div>      
    <% end %>    

    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        <%= text_field_tag :email, :value => params[:email] %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label">Password</label>
      <div class="controls">
        <%= password_field_tag :password, :value => params[:password] %>
        <p class="help-block">
          <a data-target="#modal" href="javascript:;" onclick="$('#modal').load('/accounts/reset_password')">
            Forgot your password?
          </a>
        </p>             
      </div> 
    </div>  

  </div>
  <div class="modal-footer">   
    <button data-submit-text="Signing in..." class="btn btn-primary" type="submit">Sign in</button>     
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
<% end %> 

