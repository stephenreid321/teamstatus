<div class="modal-header">
  <a class="close" data-dismiss="modal" >&times;</a>
  <h3>
    Reset your password
  </h3>
</div>

<% form_tag '/accounts/reset_password', :class => 'form-horizontal', :remote => true do %>

  <div class="modal-body">

    <% if flash[:error] %>
      <div class="alert alert-error">
        <%=flash[:error].html_safe %>
      </div>      
    <% end %>

    <div class="control-group">
      <label class="control-label">Email</label>
      <div class="controls">
        <%= text_field_tag :email, :value => params[:email], :class => 'input-xlarge' %>
      </div>
    </div>

  </div>
  <div class="modal-footer">   
    <button data-submit-text="Working..." class="btn btn-primary" type="submit">Send me a new password</button>    
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
<% end %> 

